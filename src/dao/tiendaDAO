package dao;

import java.sql.SQLException;
import modelo.proyprog.*;

public class tiendaDAO {

    static tiendaDAO instancia = null;

    public tiendaDAO() {
    }

    public void crearProducto(Producto p) {
        try {
            ConexionDB.instancia().getStatement().executeUpdate("insert into Producto values("
                    + p.getNombre() + ", " + Float.toString(p.getPrecio()) + ", " + p.getMarca() + ", "
                    + Integer.toString(p.getStock()) + ", " + Float.toString(p.calcularPVP()) + ")"
            );
        } catch (SQLException e) {

        }

    }
    public void crearPedido(Pedido p){
        try {
            ConexionDB.instancia().getStatement().executeUpdate("insert into Pedido values ("
            + Integer.toString(p.getIDPedido()) +", " + Float.toString(p.precioTotal()) + ", " + p.getFecha() + ")"
            
            );
             ConexionDB.instancia().getStatement().executeUpdate("insert into Tiene values ("
             + Integer.toString(p.getIDPedido()) + " '" + p.getProductos().get(0).getNombre() + ")"
             );
            
        }catch(SQLException e){
            
        }
    }
    
}
